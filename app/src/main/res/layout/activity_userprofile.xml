<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agacecornish.sra.activities.Main_Activity"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:background="@drawable/grad_bg"
        tools:context=".activities.Activity_UsrProfile">


      <!-- <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="59dp"
            android:width="100dp"
            android:textSize="25dp" /> -->



        <Button
            android:id="@+id/btn_goback"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/et"
            android:text="Sign Out"
            android:textColor="@color/white" />


    <Button
        android:id="@+id/capture_Image"
        android:layout_width="197dp"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/et"
        android:scaleType="fitCenter"
        android:textAlignment="gravity"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="155dp"
        android:layout_height="84dp"
        android:layout_alignBottom="@+id/capture_Image"
        android:layout_alignEnd="@+id/btn_goback"
        android:text="Take Picture"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp" />


    <ImageView
        android:layout_width="182dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/camera_icon" />


    <Button
        android:id="@+id/new_Release"
        android:layout_width="192dp"
        android:layout_height="212dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/new_release_image"
        android:background="@drawable/et"
        android:scaleType="fitCenter"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/new_release_image"
        android:layout_width="182dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="236dp"
        android:background="@drawable/news_release" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="81dp"
        android:layout_alignBottom="@+id/new_Release"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:text="News/Releases"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp" />

        <Button
            android:id="@+id/user_Market"
            android:layout_width="197dp"
            android:layout_height="202dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/capture_Image"
            android:background="@drawable/et"
            android:textColor="@color/white" />

    <ImageView
        android:id="@+id/buy_sell_image"
        android:layout_width="197dp"
        android:layout_height="177dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buy_sell_icon" />

    <TextView
        android:layout_width="155dp"
        android:layout_height="84dp"
        android:layout_alignBottom="@+id/capture_Image"
        android:layout_alignStart="@+id/stock_market"
        android:paddingLeft="20dp"
        android:text="Buy/Sell Shoes"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp" />


    <Button
        android:id="@+id/stock_market"
        android:layout_width="192dp"
        android:layout_height="212dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/new_release_image"
        android:background="@drawable/et"
        android:scaleType="fitCenter"
        android:textColor="@color/white" />

        <ImageView
            android:id="@+id/stock_marketimage"
            android:layout_width="143dp"
            android:layout_height="105dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/new_release_image"
            android:layout_marginEnd="35dp"
            android:background="@drawable/stock_market" />

    <TextView
        android:layout_width="186dp"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/user_Market"
        android:layout_marginBottom="187dp"
        android:paddingLeft="20dp"
        android:text="Shoe Stock Market"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />




        <TextView
            android:id="@+id/Email_verified"
            android:layout_width="143dp"
            android:layout_height="76dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Email Verified"
            android:textColor="@color/white"
            android:textSize="35sp" />






</RelativeLayout>

</android.support.v4.widget.DrawerLayout>


