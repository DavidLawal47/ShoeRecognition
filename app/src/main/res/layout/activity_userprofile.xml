<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activity_userprofile">


    <ImageView
        android:id="@+id/imgView_logo"
        android:layout_width="196dp"
        android:layout_height="241dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="184dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_shoelace" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="USER PROFILE PAGE"
        android:textSize="25dp"
        android:width="100dp"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:textSize="20dp"
        android:text="Note: discuss what we want to happen after the user creats an account and or logins" />


    <Button
        android:id= "@+id/btn_goback"
        android:text="Go Back"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp" />

</RelativeLayout>